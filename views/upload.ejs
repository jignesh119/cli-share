<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cli-Share</title>
    <link rel="stylesheet" href="style.css" />
    <link
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="wrapper">
      <header>QRxfr</header>
      <form id="message-form" action="/message" method="post">
        <textarea id="message-input" name="message" placeholder="enter your message" rows="5" cols="30" wrap="soft"></textarea>
        <button id="message-submit">Send</button>
      </form>
      <form id="file-form" action="#">
        <input class="file-input" type="file" name="file" hidden />
        <img id="cloudImg" src="cloud.png"/>
        <p>Browse File to Upload</p>
      </form>
      <section class="progress-area"></section>
      <section class="uploaded-area"></section>
    </div>

    <script src="script.js"></script>
  </body>
</html>
